<%- include('../partials/header') %>
<section>
  <h2>Enter a New Flight</h2>
  <form action="/flights" method="POST">
  <div class="form-row">
    <div class="form-field">
      <label>Airline:
        <select name="airline" required>
          <option value="American">American</option>
          <option value="Southwest">Southwest</option>
          <option value="United">United</option>
        </select>
      </label>
    </div>
    <div class="form-field">
      <label>Airport
          <select name="airport" required>
          <option value="AUS">AUS</option>
          <option value="DFW">DFW</option>
          <option value="DEN" selected>DEN</option>
          <option value="LAX">LAX</option>
          <option value="SAN">SAN</option>
        </select>
      </label>
    </div>
    <div class="form-field">
      <label>Flight Number:
        <input type="number" name="flightNo" required>
      </label>
    </div>
      <div class="form-field">
        <label>Departure Date:
          <input type="datetime-local" id="date-input" name="departs" value="<%= departsDate %>" required>
        </label>
      </div>
    </div>
  <input type="submit" value="Add Flight">
</form>
</section>
<%- include('../partials/footer') %>